<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="Sign In"
        android:layout_width="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:id="@+id/textView13"
        android:textSize="30dp"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary" />

    <EditText
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="91dp"
        android:id="@+id/uname_login"
        android:hint="User Name"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView13"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary" />

    <RadioGroup
        android:orientation="horizontal"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_width="200dp"
        android:layout_below="@+id/textView13"
        android:layout_alignEnd="@+id/uname_login"
        android:layout_marginEnd="14dp">

        <RadioButton
            android:text="Vendor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vendor_rd"
            android:buttonTint="#616161"
            android:layout_weight="1"
            android:checked="true" />

        <RadioButton
            android:text="Customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/customer_rd"
            android:buttonTint="#616161"
            android:layout_weight="1"
            android:checked="false" />
    </RadioGroup>

    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="15dp"
        android:id="@+id/password_login"
        android:hint="Password"
        android:layout_below="@+id/uname_login"
        android:layout_alignStart="@+id/uname_login"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary" />

    <Button
        android:text="LOGIN"
        android:layout_height="40dp"
        android:id="@+id/login"
        android:layout_width="250dp"
        android:layout_marginTop="24dp"
        android:onClick="onLogin"
        android:layout_below="@+id/password_login"
        android:layout_alignStart="@+id/password_login"
        android:textColor="#fff"
        android:background="@color/colorPrimary" />

    <Button
        android:text="Signup"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:id="@+id/button8"
        android:background="@color/colorPrimary"
        android:textColor="#fff"
        android:onClick="Register"
        android:layout_below="@+id/login"
        android:layout_alignStart="@+id/login"
        android:layout_marginTop="10dp" />

</RelativeLayout>